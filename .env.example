# Core application
NODE_ENV=development
PORT=5000
HOST=0.0.0.0
LOG_LEVEL=info
ENFORCE_HTTPS=false

# Database connectivity
DATABASE_URL=postgres://chatsphere:strongpassword@localhost:5432/chatsphere

# Session management
SESSION_SECRET=please-change-me-to-a-long-random-string

# Admin bootstrap (optional overrides for first run)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-me-strong

# Meta / WhatsApp provider credentials (optional if managing via UI)
META_TOKEN=
META_PHONE_NUMBER_ID=
META_VERIFY_TOKEN=
META_APP_SECRET=

# Public URLs (optional; required when serving assets via CDN/proxy)
PUBLIC_APP_URL=http://localhost:5000
PUBLIC_BASE_URL=http://localhost:5000
MEDIA_PUBLIC_BASE_URL=http://localhost:5000
